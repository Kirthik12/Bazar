<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bazar">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".add_credit_card"></activity>
        <activity android:name=".paymentScreen" />
        <activity android:name=".CreateUser" />
        <activity android:name=".AccountSettings" />
        <activity android:name=".Cart" />
        <activity
            android:name=".AddProductforSale"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".Buy_Screen" />
        <activity
            android:name=".Slidermenu"
            android:label="@string/title_activity_slidermenu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SecondActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>